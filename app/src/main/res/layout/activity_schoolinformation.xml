<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormRegisterStudy.SchoolinformationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back_pgi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/back_svgrepo_com" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:fontFamily="@font/kantumruy2"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:text="ត្រឡប់ក្រោយ"
                android:textColor="@color/color_app"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/kantumruy2"
            android:text="ពាក្យចុះឈ្មោះចូលរៀន"
            android:gravity="center"
            android:textColor="@color/color_app"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="ព័ត៌មានការសិក្សា"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color_app"

            />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:textSize="15dp"
            android:textColor="@color/color_app"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:text="បឋមសិក្សា"
            />

        <EditText
            android:id="@+id/edit_ps"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:ems="10"
            android:hint="បឋមសិក្សា"
            android:textColor="@color/color_app"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/color_app"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:text="អនុវិទ្យាល័យ"
            />

        <EditText
            android:id="@+id/edit_ms"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:ems="10"
            android:hint="អនុវិទ្យាល័យ"
            android:textColor="@color/color_app"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/color_app"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:text="វិទ្យាល័យ"
            />

        <EditText
            android:id="@+id/edit_hs"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:ems="10"
            android:hint="វិទ្យាល័យ"
            android:textColor="@color/color_app"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/color_app"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:text="កាលបរិច្ឆេទប្រឡង សញ្ញាបត្រមធ្យមសិក្សាទុតិយភួមិ"
            />

        <EditText
            android:id="@+id/edit_exam_date"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:ems="10"
            android:hint="dd/mm/yy"
            android:textColor="@color/color_app"
            android:inputType="date"
            />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textColor="@color/color_app"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:text="និទ្ទេស"
            />

        <EditText
            android:id="@+id/edit_dg"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/edit_text"
            android:padding="10dp"
            android:ems="10"
            android:hint="A.B.C.D.E"
            android:textColor="@color/color_app"
            android:inputType="text" />

        <Button
            android:id="@+id/btn_next_school_infor"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/color_app"
            android:textColor="@color/white"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="បន្ទាប់" />

    </LinearLayout>
</RelativeLayout>