<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormRegisterStudy.UploadActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back_upload"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/back_svgrepo_com" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/kantumruy2"
                android:gravity="center"
                android:text="ត្រឡប់ក្រោយ"
                android:textColor="@color/color_app"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/kantumruy2"
            android:text="ពាក្យចុះឈ្មោះចូលរៀន"
            android:gravity="center"
            android:textColor="@color/color_app"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="ព័ត៌មានប្រវត្តិរូបជារូបភាព"
            android:fontFamily="@font/kantumruy2"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color_app"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:text="រូបថតសមីខ្លួន 4x6 និង 3x4"
                android:textSize="15dp"
                android:textColor="@color/color_app"
                android:textStyle="bold"
                android:fontFamily="@font/kantumruy2"
                />
            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:text="រូបថតចំពីមុខគ្មានពាក់វ៉ែនតា ផ្ទៃពណ៌ខៀវ"
                android:textSize="15dp"
                android:textColor="@color/color_text"
                android:fontFamily="@font/kantumruy2"
                />
            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:text="(ប្រុសអាវធំ ស្រីអាវសឫអាវប៉ាក់)"
                android:textSize="15dp"
                android:textColor="@color/color_text"
                android:fontFamily="@font/kantumruy2"
                />

            <Button
                android:id="@+id/btn_img1"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/color_app"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/kantumruy2"
                android:text="ចុះដើម្បីដាក់រូបភាព" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/kantumruy2"
                android:text="រូបសញ្ញាបត្រមធ្យមសិក្សាទុតិយភួមិ"
                android:textColor="@color/color_app"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/kantumruy2"
                android:text="សញ្ញាបត្រត្រូវមានការបញ្ជាក់ពីសាលាស្រុក/ខណ្ឌ"
                android:textColor="@color/color_text"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_img2"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/color_app"
                android:fontFamily="@font/kantumruy2"
                android:text="ចុះដើម្បីដាក់រូបភាព"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/kantumruy2"
                android:text="ជ្រើសរើសមុខជំនាញ"
                android:textColor="@color/color_app"
                android:textSize="15dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/color_app"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/kantumruy2"
            android:text="ដាក់ស្នើ" />


    </LinearLayout>
</RelativeLayout>